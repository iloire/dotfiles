{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_VERBOSE": "1"
  },
  "permissions": {
    "allow": [
      "Bash(git,ls,cat,grep,find,mkdir,touch,echo)",
      "Edit(./*)",
      "Read(./*)",
      "Write(./*)",
      "Glob(./*)",
      "Grep(./*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(npx tsc:*)",
      "Read(//usr/local/bin/**)",
      "Bash(grep:*)",
      "Bash(psql:*)",
      "Bash(rm:*)"
    ],
    "deny": [
      "Bash(rm,curl,wget,sudo,apt,pip,brew)",
      "Delete(*)",
      "Edit(/etc/*,/usr/*,/var/*,~/.ssh/*,~/.bash*)",
      "Write(/etc/*,/usr/*,/var/*,~/.ssh/*,~/.bash*)",
      "Read(/etc/*,/usr/*,/var/*,~/.ssh/*,~/.bash*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Executing tool: ${CLAUDE_TOOL_NAME}\" >> ~/claude_log.txt"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Tool completed: ${CLAUDE_TOOL_NAME}\" >> ~/claude_log.txt"
          }
        ]
      }
    ]
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "ignorePatterns": [
    "node_modules",
    ".git",
    "*.log",
    "*.tmp"
  ],
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "./"
      ],
      "paths": [
        "./*"
      ]
    }
  }
}
