[init]
  templatedir = ~/dotfiles/git/templates
  defaultBranch = main
[user]
  name = ivan l.
  email = 317868+iloire@users.noreply.github.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = nvim
  excludesfile = ~/.gitignore
  pager = delta

[alias]
  st = status --short
  ci = commit
  co = checkout
  df = diff
  dc = diff --cached
  br = branch -a -v
  lg = log -p
  ls = ls-files

  # Branches sorted by last commit date
  b = for-each-ref --sort=-committerdate refs/heads/ --format='%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)'

  # Pretty log
  lol = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lola = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --all

  # Show the diff between the latest commit and the current state
  d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

  # Show diff between state N revisions ago and current state
  di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"

  # Credit an author on the latest commit
  credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"

  # Show branches containing a commit
  contains = !sh -c 'git branch -a --contains $1' -

  # Show files ignored by git
  ign = ls-files -o -i --exclude-standard
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  line-numbers = true
  hyperlinks = true
[diff]
  algorithm = histogram
  colorMoved = default
[merge]
  conflictstyle = diff3
[commit]
  verbose = true
[fetch]
  prune = true
[rebase]
  autosquash = true
  autostash = true
[rerere]
  enabled = true
[transfer]
  fsckObjects = true
[push]
  default = simple
[filter "lfs"]
  process = git-lfs filter-process
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
[pull]
  ff = only
